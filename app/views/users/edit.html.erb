<label>User name: <%= @user.name %></label>
<div class="container">
  <div class="row">
    <h1 class="title">Edit Info</h1>
  </div>
  <div class="row">
  <div class="col-lg-offset-2">
    <%= form_for @user, url: users_path, html: {class: "form-horizontal"} do |f| %>
        <div class="form-group">
        <%= f.label :ten, "Name", class: "col-md-2 control-label" %>
        <div class="col-md-6">
          <%= f.text_field :ten, class: "form-control" %>
        </div>
        </div>
     
        <div class="form-group">
        <%= f.label :thoigian, "Thoi gian", class: "col-md-2 control-label" %>
        <div class="col-md-6">
          <%= f.text_field :thoigian, class: "form-control" %>
        </div>
        </div>

       <div class="form-group">
        <%= f.label :congviec, "Cong viec", class: "col-md-2 control-label" %>
        <div class="col-md-6">
          <%= f.text_field :congviec, class: "form-control" %>
        </div>
        </div>
    
        <div class="form-group">
        <%= f.label :masothue, "Ma so thue", class: "col-md-2 control-label" %>
        <div class="col-md-6">
          <%= f.text_field :masothue, class: "form-control" %>
        </div>
        </div>
        <div class="form-group">
        <%= f.label :diachi, "Dia chi", class: "col-md-2 control-label" %>
        <div class="col-md-6">
          <%= f.text_field :diachi, class: "form-control" %>
        </div>
        </div>
    
        <div class="form-group">
        <%= f.label :vitri, "Vi tri trong cong ty", class: "col-md-2 control-label" %>
        <div class="col-md-6">
          <%= f.text_field :vitri, class: "form-control" %>
        </div>
        </div>
        <div class="form-group">
        <div class="col-lg-offset-4">
          <%= f.submit "Save", class: "btn btn-success" %>
        </div>
      </div>
    <% end %>
  </div>
  </div>
</div>