<div class="container">
  <div class="row">
    <div class="col-lg-12 text-center">
      <h1 class="title">USER</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-offset-3 col-lg-6">
      <div class="text-left col-lg-6", style="padding-left: 0px ">
        <label>User name: <%= @user.name %></label>
      </div>
      <br>
      
      <div class="col-lg-offset-3 col-lg-6", style="padding-left: 0px">
        <%= link_to "Insert information", edit_user_path %>
      </div>

      <div class="col-lg-offset-3 col-lg-6", style="padding-left: 0px">
        <%= link_to "Show information", user_showinfo_path(@user) %>
      </div>

      <div class="text-right col-lg-6">
        <%= link_to "Logout", logout_path, method: :delete %>
      </div>
    </div><br>

    <div class="col-lg-offset-3 col-lg-6">
      <%= link_to "List Users", users_path %>
    </div>

  </div>
</div>
